@using WebMaze.Services
@inject UserService userService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WebMaze</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/UserAccount.css?t=@DateTime.Now.Ticks" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebMaze</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li>
                            <a class="nav-link text-dark" href="/Home/Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a class="nav-link text-dark" href="/Account/MyProfile">Profile @userService.GetCurrentUser()?.Login</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" href="/Account/Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a class="nav-link text-dark" href="/Account/Login">Login</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" href="/Account/Registration">Registration</a>
                            </li>
                        }
                        <li>
                            <a class="nav-link text-dark" href="/Student/Index">Students page</a>
                        </li>
                    </ul>
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <vc:balance-summary />
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="wrapper">
        <nav id="sidebar" class="sidebar">
            <div class="p-2">
                <ul class="list-unstyled components mb-5">
                    <li class="active">
                        <a asp-controller="Account" asp-action="MyProfile">My profile</a>
                    </li>
                    <li>
                        <a href="#">Messenger</a>
                    </li>
                    <li>
                        <a asp-controller="Friends" asp-action="Index">Friends</a>
                    </li>
                    <li>
                        <a asp-controller="UserTasks" asp-action="Index">Tasks</a>
                    </li>
                    <li>
                        <a asp-controller="Certificates" asp-action="Index">Certificates</a>
                    </li>
                    <li>
                        <a asp-controller="Transactions" asp-action="Index">Transactions</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container">
            <main role="main" class="row justify-content-center pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            Этот сайт сделал я сам
        </div>
    </footer>
</body>
</html>
