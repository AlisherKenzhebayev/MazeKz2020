@using WebMaze.Services

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Webmaze School Subsystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/schoolSite.css?t=@DateTime.Now.Ticks" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container h-100">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav d-flex w-100">
                        <li class="justify-content-start">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="justify-content-start">
                            <a class="navbar-brand" asp-area="" asp-controller="School" asp-action="Index">School</a>
                        </li>
                        @RenderSection("ExtensionBreadcrumb", false)
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="justify-content-end ml-auto">
                                <a asp-action="MyProfile" asp-controller="School" class="nav-link text-dark">My Profile (@User.Identity.Name)</a>
                            </li>
                            <li class="justify-content-end">
                                <a asp-action="Logout" asp-controller="School" class="nav-link text-dark">Log out</a>
                            </li>
                        }
                        else
                        {
                            <li class="justify-content-end ml-auto">
                                <a asp-action="Registration" asp-controller="School" class="nav-link text-dark">Registration</a>
                            </li>
                            <li class="justify-content-end">
                                <a asp-action="Login" asp-controller="School" class="nav-link text-dark">Log in</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            Developed by .NET Web Development Training participants
        </div>
    </footer>
</body>
</html>
