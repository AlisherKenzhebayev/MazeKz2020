@using WebMaze.Models.Certificate
@model CertificateViewModel

@{
    ViewBag.Title = "Сертификаты";
}

@section Scripts{
    <script src="~/js/site.js"></script>
}

<div class="row mt-3 mb-3">
    <h2 class="col-md-12 mb-4 text-center">Получение сертификата</h2>
    <div class="col-md-6 order-last order-md-1">
        <form asp-controller="Certificate" asp-action="MakeCertificate" method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <div class="form-group row">
                <label class="col-sm-4" for="speciality">Специальность: </label>
                <div class="col-sm-8">
                    <input readonly="readonly" class="form-control" type="text" name="speciality" value="@Model.Speciality" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4" for="starts">Начало: </label>
                <div class="col-sm-8">
                    <input readonly="readonly" class="form-control" type="date" name="starts" value="@Model.Starts.ToString("yyyy-MM-dd")" />
                </div>
            </div>
            @if (Model.Expires != null)
            {
                <div class="form-group row">
                    <label class="col-sm-4" for="expires">Заканчивается: </label>
                    <div class="col-sm-8">
                        <input readonly="readonly" class="form-control" type="date" name="expires" value="@Model.Expires.GetValueOrDefault().ToString("yyyy-MM-dd")" />
                    </div>
                </div>
            }
            <div class="form-group row">
                <label class="col-sm-4" for="price">Цена: </label>
                <div class="col-sm-8">
                    <input readonly="readonly" class="form-control" type="number" name="price" value="@Model.Price" />
                </div>
            </div>
            <div class="form-check mt-3 mb-3">
                <input class="form-check-input" type="checkbox" id="agreed" required />
                <label class="form-check-label" for="agreed">Я принимаю условия и обязанности полицейского*</label>
                <div class="invalid-feedback">Примите соглашение</div>
            </div>
            <input hidden type="text" name="RedirectToController" value="@Model.RedirectToController" />
            <input hidden type="text" name="RedirectToAction" value="@Model.RedirectToAction" />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Стать полицейским</button>
            </div>
        </form>
    </div>
    <div class="col-md-6 order-1 order-md-last">
        <h1 class="text-center">Test</h1>
        <div class="text-center">
            Test of the tests
        </div>
    </div>
</div>
