@model WebMaze.Models.Account.LoginViewModel
@using WebMaze.Helpers.Police

@{
    Layout = "_PoliceLayout.cshtml";
    ViewBag.Title = "Вход в аккаунт";
}

@section BreadLink {
    @Html.BreadCrumb("Начало", "/", "Полиция", "/Police", "Login")
}

<form asp-controller="Police" asp-action="Login" method="post">
    <h2>Вход в аккаунт</h2>
    <hr />
    <div asp-validation-summary="All"></div>
    <div class="form-group col-md-5">
        <label for="login">Логин:</label>
        <input class="form-control" name="login" type="text" value="@Model.Login" required />
        <span asp-validation-for="@Model.Login" />
    </div>
    <div class="form-group col-md-5">
        <label for="password">Пароль:</label>
        <input class="form-control" name="password" type="password" required />
        <span asp-validation-for="@Model.Password" />
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Войти</button>
    </div>
</form>