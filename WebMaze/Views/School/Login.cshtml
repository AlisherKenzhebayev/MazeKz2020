@model WebMaze.Models.Account.LoginViewModel

@{
    Layout = "_LayoutSchool";
}

@section Scripts{
    <script src="~/js/school.js"></script>
}

<partial name="_ValidationScriptsPartial"/>

<div class="p-md-5 p-4 mb-4 text-white bg-darker rounded">
    <div class="col-md-10 px-0 w-100 text-dark">
        <h1 class="display-4">Login page.</h1>
    </div>
</div>

<div class="loginWrapper">
    <form class="formContent w-75 d-flex flex-column" asp-action="Login" asp-controller="School" method="post" class="needs-validation flex-column" novalidate>
        <input type="hidden" value="@Model.ReturnUrl" name="returnUrl" />
        <div class="form-group flex-column d-flex align-items-center">
        <label asp-for="@Model.Login" class="control-label">Login:</label>
            <div class="flex-column d-flex align-items-center">
                <input type="text" id="Login" name="login" placeholder="login" asp-for="@Model.Login" class="form-control w-50 justify-content-start col-md-auto">
                <span class="justify-content-end">@Html.ValidationMessageFor(m => m.Login)</span>
            </div>
        </div>
        <div class="form-group flex-column d-flex align-items-center">
            <label asp-for="@Model.Password" class="control-label">Password:</label>
            <div class="flex-column d-flex align-items-center">
                <input type="password" id="Password" name="password" placeholder="password" asp-for="@Model.Password" class="form-control w-50 justify-content-start col-md-auto">
                <span class="justify-content-end">@Html.ValidationMessageFor(m => m.Password)</span>
            </div>
        </div>
        <input type="submit" value="Log In">
</form>
    <hr />
    <h4>Sign Up?</h4>
    <button asp-controller="Account" asp-action="Registration">
        Sign Up
    </button>
</div>
